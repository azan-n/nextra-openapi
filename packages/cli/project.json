{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/cli",
        "main": "packages/cli/src/index.ts",
        "tsConfig": "packages/cli/tsconfig.lib.json",
        "assets": [],
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "updateBuildableProjectDepsInPackageJson": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs cli {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "generate": {
      "command": "node dist/packages/cli/src/index.js -s https://api.cryptlex.com/api-docs/v3/swagger.json -o packages/demo/pages/generated-docs --deleteExisting true",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/cli/**/*.ts",
          "packages/cli/package.json"
        ]
      }
    }
  },
  "tags": []
}
